<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kavya.theledger">

    <uses-permission android:name="android.permission.INTERNET"/>
<!--    Taking permission to use biometric functionality ...... -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC"/>
    <uses-permission android:name="android.permission.USE_FINGERPRINT"/>
    <uses-permission
        android:name="com.google.android.gms.permission.AD_ID"
        tools:node="remove" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheLedger"
        android:hardwareAccelerated="true"
        >

        <!--        Splash activity decalration .....-->
        <activity android:name="com.kavya.theledger.MainSplash"
            android:exported="true"
            android:theme="@style/theme.splash">
            <!--            This is the main activity-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <!--        Signup activity Declaration.......-->
        <activity android:name="com.kavya.theledger.signup"
            android:exported="true">
            <!--             now this is not the main activity-->
            <!--            <intent-filter>-->
            <!--                <action android:name="android.intent.action.MAIN"/>-->
            <!--                <category android:name="android.intent.category.LAUNCHER"/>-->
            <!--            </intent-filter>-->
        </activity>

        <!--        Choose activity Declaration.......-->
        <activity android:name="com.kavya.theledger.chooseLoginSignup"
            android:exported="true"/>

        <!--        Login Activity Declaration.......-->
        <activity android:name="com.kavya.theledger.Login"
            android:exported="true"
            />

        <!--    DashBoard activity Declaration........-->
        <activity android:name="com.kavya.theledger.DashBoard"
            android:exported="true"
            />
        <activity android:name="com.kavya.theledger.About_app"
            android:exported="true"
            />

        <activity android:name="com.kavya.theledger.Transaction_activity"
            android:exported="true"/>

        <activity android:name="com.kavya.theledger.RecyclerMain"
            android:exported="true"/>

    </application>

</manifest>