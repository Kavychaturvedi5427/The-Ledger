<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.theledger">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheLedger"
        >

        <!--        Splash activity decalration .....-->
        <activity android:name=".MainSplash"
            android:exported="true"
            android:theme="@style/theme.splash">
            <!--            This is the main activity-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <!--        Signup activity Declaration.......-->
        <activity android:name=".signup"
            android:exported="true">
            <!--             now this is not the main activity-->
            <!--            <intent-filter>-->
            <!--                <action android:name="android.intent.action.MAIN"/>-->
            <!--                <category android:name="android.intent.category.LAUNCHER"/>-->
            <!--            </intent-filter>-->
        </activity>

        <!--        Choose activity Declaration.......-->
        <activity android:name=".chooseLoginSignup"
            android:exported="true"/>

        <!--        Login Activity Declaration.......-->
        <activity android:name=".Login"
            android:exported="true"
            />

        <!--    DashBoard activity Declaration........-->
        <activity android:name=".DashBoard"
            android:exported="true"
            />
        <activity android:name=".About_app"
            android:exported="true"
            />

    </application>

</manifest>