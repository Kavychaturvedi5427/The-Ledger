        <item name="colorPrimary">#F6F6F6</item>
        <item name="colorPrimaryVariant">#A2D5C6</item>
        <item name="colorOnPrimary">#000000</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#A2D5C6</item>
        <item name="colorSecondaryVariant">#6BAA98</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Text color -->
        <item name="android:textColor">#F6F6F6</item>

        <!-- Background and surface colors -->
