<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/logincard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="9dp">

            <RelativeLayout
                android:id="@+id/loginRealtive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/mainimg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/loginMaintext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mainimg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/lexend"
                    android:text="@string/splash_introText"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/loginMaintext"
                    android:layout_marginVertical="8dp"
                    android:background="#BDBDBD" />

                <TextView
                    android:id="@+id/loginsubtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider1"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/lexend"
                    android:text="@string/LoginSubtext"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/loginsubtext"
                    android:layout_marginVertical="8dp"
                    android:background="#BDBDBD" />
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider2"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/lexend"
                    android:text="Enter Email ID"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email"
                    android:id="@+id/emailedit"
                    android:hint="Enter your Email ID"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/pintext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailedit"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/lexend"
                    android:text="@string/PinInput"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/pinInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pintext"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <EditText
                        android:id="@+id/pin1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/pin_box"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/pin2"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/pin_box"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/pin3"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/pin_box"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/pin4"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/pin_box"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/pin5"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/pin_box"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/pin6"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/pin_box"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:maxLength="1"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>
                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pinInput"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:background="@color/blue"
                    android:fontFamily="@font/lexend"
                    android:text="Login"
                    android:id="@+id/loginBtn"/>

                <TextView
                    android:id="@+id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Pin? Reset Here"
                    android:fontFamily="@font/lexend"
                    android:textSize="15sp"
                    android:layout_below="@id/loginBtn"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    />
                <View
                    android:id="@+id/logindivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="2dp"
                    android:layout_below="@id/reset"
                    android:background="#BDBDBD"/>

                <TextView
                    android:id="@+id/redirectSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not having an account? Sign Up"
                    android:fontFamily="@font/lexend"
                    android:textSize="15sp"
                    android:layout_below="@id/logindivider"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/back_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back"
                    android:layout_below="@+id/redirectSignup"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
